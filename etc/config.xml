<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <paydibs_payment_gateway>
                <active>0</active>
                <title>Paydibs Payment Gateway</title>
                <api_environment>test</api_environment>
                <test_api_url>https://stgapi.paydibs.com/PPG/trigger</test_api_url>
                <production_api_url>https://api.paydibs.com/PPG/trigger</production_api_url>
                <merchant_id>YOUR_MERCHANT_ID</merchant_id>
                <merchant_password backend_model="Magento\Config\Model\Config\Backend\Encrypted">YOUR_MERCHANT_PASSWORD</merchant_password>
                <page_timeout>300</page_timeout>
                <model>Paydibs\PaymentGateway\Model\PaymentMethod</model>
                <order_status>pending</order_status>
                <payment_action>authorize</payment_action>
                <sort_order>100</sort_order>
                <is_initialize_needed>1</is_initialize_needed>
            </paydibs_payment_gateway>
        </payment>
    </default>
</config>
